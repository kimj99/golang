# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  user(id:ID!): User
}

type Mutation {
  upsertUser(input: UserInput!): User!
  validateKey(api_key: String!): Token!

}

type User {
  id: ID!
  name: String!
  isAdmin: Boolean!
}

input UserInput {
  id: String
  name: String!
  isAdmin: Boolean!
}

type Token {
  token: String!
  expires_at: Int
}